
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<fieldset>
    <legend>Find what?</legend>
    <input id="findword" placeholder="Find what?" />
</fieldset>
<div id="result"></div>
@section Scripts{
    <script>
        $(document).ready(function(){
            $("#findword").keyup(function(){
                $.ajax({
                    url: "/Ajax/Search",
                    type: "POST",
                    data: {keyword: $(this).val()},
                    success: function(response){
                        $("#result").html(response);
                    }
                });
            });
        });
    </script>
}

